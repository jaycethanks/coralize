{
  "include": ["src/**/*.ts", "index.d.ts", "index.d.ts"],
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "./dist/",
    "target": "ES2015",
    "module": "ES2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  }
}
