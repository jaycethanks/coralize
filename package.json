{
  "name": "coralize",
  "displayName": "coralize",
  "description": "customize the color of vscode window",
  "version": "0.1.0",
  "publisher": "sunzhongyi",
  "icon": "resources/coralize.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": "https://github.com/jaycethanks/coralize/tree/main",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coralize-view",
          "title": "Coralize",
          "icon": "resources/coralize.svg"
        }
      ]
    },
    "views": {
      "coralize-view": [
        {
          "type": "webview",
          "id": "coralize-view",
          "name": ""
        }
      ]
    },
    "configuration": {
      "title": "Coralzie",
      "properties": {
        "coralize.color": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "template:dev": "npm run scss & npm run tsc",
    "tsc": "tsc --watch  --target es5 ./template/*.ts -outDir ./template/dist",
    "scss": "scss --watch --no-cache ./template:./template/dist --sourcemap=none"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
