// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "out": false // set this to true to hide the "out" folder with the compiled JS files
  },
  "search.exclude": {
    "out": true // set this to false to include "out" folder in search results
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "peacock.color": "#49885c",
  "coralize.color": "#fbcd31",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#fbcd31",
    "titleBar.activeForeground": "#000",
    "titleBar.inactiveBackground": "#fbcd31",
    "titleBar.inactiveForeground": "#000",
    "activityBar.background": "#fbcd31",
    "activityBar.foreground": "#000",
    "activityBar.inactiveForeground": "#0000004D",
    "statusBar.background": "#fbcd31",
    "statusBar.foreground": "#000",
    "statusBarItem.hoverBackground": "#0000004D",
    "statusBarItem.remoteBackground": "#fbcd31",
    "statusBarItem.remoteForeground": "#000"
  }
}
